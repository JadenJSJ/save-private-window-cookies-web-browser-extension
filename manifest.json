{
	"manifest_version": 3,
	"name": "Save private window cookies",
	"description": "Save cookies, localStorage, IndexedDB, and other data in private windows and restore them when a new private window is opened.",
	"version": "2.0.0",
	"homepage_url": "https://github.com/JadenJSJ/save-private-window-cookies-web-browser-extension",
	"author": "JadenJSJ",
	"icons": {
		"16": "icons/icon-16x16.png",
		"32": "icons/icon-32x32.png",
		"48": "icons/icon-48x48.png",
		"64": "icons/icon-64x64.png",
		"96": "icons/icon-96x96.png",
		"128": "icons/icon-128x128.png"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon-16x16.png",
			"32": "icons/icon-32x32.png",
			"48": "icons/icon-48x48.png"
		},
		"default_title": "Save Private Window Data"
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content.js"
			],
			"run_at": "document_start"
		}
	],
	"options_ui": {
		"page": "popup.html",
		"open_in_tab": true
	},
	"permissions": [
		"storage",
		"cookies",
		"downloads",
		"tabs",
		"scripting"
	],
	"host_permissions": [
		"<all_urls>"
	]
}