{
	"manifest_version": 3,
	"name": "Save private window cookies",
	"description": "Save cookies, localStorage, IndexedDB, and other data in private windows and restore them when a new private window is opened.",
	"version": "2.0.0",
	"homepage_url": "https://github.com/JadenJSJ/save-private-window-cookies-web-browser-extension",
	"author": "JadenJSJ",
	"browser_specific_settings": {
		"gecko": {
			"id": "save-private-window-cookies@JadenJSJ",
			"strict_min_version": "109.0"
		}
	},
	"icons": {
		"16": "icons/icon.svg",
		"32": "icons/icon.svg",
		"48": "icons/icon.svg",
		"64": "icons/icon.svg",
		"96": "icons/icon.svg",
		"128": "icons/icon.svg"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon.svg",
			"32": "icons/icon.svg",
			"48": "icons/icon.svg"
		},
		"default_title": "Save Private Window Data"
	},
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content.js"
			],
			"run_at": "document_start"
		}
	],
	"options_ui": {
		"page": "popup.html",
		"open_in_tab": true
	},
	"permissions": [
		"storage",
		"cookies",
		"downloads",
		"browsingData",
		"tabs"
	],
	"host_permissions": [
		"<all_urls>"
	]
}